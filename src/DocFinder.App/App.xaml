<Application
    x:Class="DocFinder.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit"
    Startup="OnStartup"
    ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
                <ResourceDictionary Source="Resources/DesignTokens.xaml" />
                <ResourceDictionary Source="Resources/Theme.Light.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="Black" />
            <SolidColorBrush x:Key="ControlStrokeColorDefaultBrush" Color="#FFABADB3" />
            <!-- Fallback brush if Wpf.Ui resources are missing -->
            <SolidColorBrush x:Key="ApplicationBackgroundBrush" Color="#0F0F0F" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
